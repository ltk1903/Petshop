
@{
    ViewBag.Title = "Stock";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <h3 class="mb-4">Kho sản phẩm</h3>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sản phẩm mẫu (tạm thời) -->
                <tr>
                    <td>1</td>
                    <td><img src="~/images/sample1.jpg" alt="Sản phẩm" width="60"></td>
                    <td>Thức ăn cho chó</td>
                    <td>120.000₫</td>
                    <td>50</td>
                    <td><span class="badge badge-secondary">Chưa đăng</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-success"><i class="fas fa-upload"></i></a>
                        <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td><img src="~/images/sample2.jpg" alt="Sản phẩm" width="60"></td>
                    <td>Đồ chơi cho mèo</td>
                    <td>80.000₫</td>
                    <td>35</td>
                    <td><span class="badge badge-success">Đã đăng</span></td>
                    <td>
                        <a href="#" class="btn btn-sm btn-success disabled"><i class="fas fa-check"></i></a>
                        <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

