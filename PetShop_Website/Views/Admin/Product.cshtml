@model PetShop_Website.Models.Product

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <h3 class="mb-4">Add New Product</h3>

        @using (Html.BeginForm("Product", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.ProductName)
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", placeholder = "Enter product name" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Enter price", type = "number", step = "0.01" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.StockQuantity)
                @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", placeholder = "Enter quantity", type = "number" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.CategoryID)
                @Html.DropDownList("CategoryID", (SelectList)ViewBag.CategoryList, "Choose category", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Describe product...", rows = "3" })
            </div>

            <div class="form-group">
                <label for="ImageFile">Image</label>
                <input type="file" name="ImageFile" class="form-control-file" />
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Save product
            </button>
            <a href="@Url.Action("Stock", "Admin")" class="btn btn-secondary ml-2">Hủy</a>
        }
    </div>
</div>
