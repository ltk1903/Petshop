
@{
    ViewBag.Title = "Revenue";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="container">
    <div class="page-inner">
        <h3 class="mb-4">Revenue statistics</h3>

        <!-- Bộ lọc -->
        <form class="form-inline mb-4">
            <label class="mr-2">Filter by:</label>
            <select class="form-control mr-2">
                <option>In a day</option>
                <option>In a week</option>
                <option>In a month</option>
                <option>In a year</option>
            </select>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

        <!-- Thống kê nhanh -->
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total revenue</h5>
                        <p class="card-text">18.520.000₫</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-info mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Total orders</h5>
                        <p class="card-text">58 orders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Sold products</h5>
                        <p class="card-text">234 sản phẩm</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Placeholder cho biểu đồ -->
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Revenue charts</h5>
                <div style="height: 300px; background: #f0f0f0; text-align:center; line-height:300px;">
                    [Biểu đồ ở đây sau này]
                </div>
            </div>
        </div>
    </div>
</div>

