@model PetShop_Website.Models.Product

@{
    ViewBag.Title = "Product Detail";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(string.IsNullOrEmpty(Model.ImageURL) ? "~/Content/images/default.jpg" : Model.ImageURL)"
                 class="img-fluid" alt="@Model.ProductName" />
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>

            <p>
                <strong>Category:</strong>
                @(Model.Category != null ? Model.Category.CategoryName : "Unknown")
            </p>

            <p><strong>Price:</strong> @Model.Price VNĐ</p>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p><strong>Description:</strong> @Model.Description</p>
            }
            else
            {
                <p><strong>Description:</strong> No description available.</p>
            }

            <a href="#" class="btn btn-primary mt-3">Add to Cart</a>
        </div>
    </div>
</div>
